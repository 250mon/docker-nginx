# Common proxy header forwarding parameters
# proxy_set_header Host              $host;
proxy_set_header Host              $http_host;  # keeps :8080 port
proxy_set_header X-Real-IP         $remote_addr;
proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;

# Preserve request host and protocol
# proxy_set_header X-Forwarded-Host  $host;
proxy_set_header X-Forwarded-Host  $http_host;  # keeps :8080 port
proxy_set_header X-Forwarded-Port  $server_port;

# WebSocket support
proxy_set_header Upgrade           $http_upgrade;
proxy_set_header Connection        $connection_upgrade;

# HTTP behavior
proxy_http_version 1.1;
# Handle redirects and error pages
proxy_redirect off;
proxy_intercept_errors on;
proxy_buffering off;           # optional, for streaming
# Timeouts â€” tweak if long-lived requests
proxy_connect_timeout 5s;
proxy_send_timeout    60s;
proxy_read_timeout    60s;

# Size limit
client_max_body_size 20m;
